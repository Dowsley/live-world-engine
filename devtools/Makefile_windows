all: compile run

run:
	.\output.exe

compile:
	g++ -Wall -Wno-unknown-pragmas -o output.exe src/main.cpp -luser32 -lgdi32 -lopengl32 -lgdiplus -lShlwapi -ldwmapi -lstdc++fs -static -std=c++17

debug:
	g++ -Wunused -Wno-unknown-pragmas -o output.exe -g src/main.cpp -luser32 -lgdi32 -lopengl32 -lgdiplus -lShlwapi -ldwmapi -lstdc++fs -static -std=c++17 -g
	gdb .\output.exe